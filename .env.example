# Anthropic API Key (REQUIRED for real LLM mode)
ANTHROPIC_API_KEY=not-needed

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/polling_survey

# Application
APP_ENV=development
LOG_LEVEL=INFO
MAX_FOLLOWUP_PROBES=3
SESSION_TIMEOUT_MINUTES=30

# Mock LLM Mode (for testing without API costs)
# Set to true to use mock responses instead of real API calls
USE_MOCK_LLM=true